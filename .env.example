# Othman Discord Bot - Configuration
# ===================================
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED CREDENTIALS
# =============================================================================

# Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# OpenAI API Key (for AI-powered title generation and summaries)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# REQUIRED GUILD/SERVER IDS
# =============================================================================

# Main Syria Discord Server ID
SYRIA_GUILD_ID=1234567890123456789

# Mods Guild ID (for cross-server mod features)
MODS_GUILD_ID=1234567890123456789

# =============================================================================
# REQUIRED CHANNEL IDS
# =============================================================================

# News Channel ID (Forum channel where news posts are created)
NEWS_CHANNEL_ID=1234567890123456789

# General Channel ID (Text channel for news announcements)
GENERAL_CHANNEL_ID=1234567890123456789

# Soccer Channel ID (Forum channel for hourly soccer news posts)
SOCCER_CHANNEL_ID=1234567890123456789

# Gaming Channel ID (Forum channel for hourly gaming news posts)
GAMING_CHANNEL_ID=1234567890123456789

# Debates Forum ID (Forum channel for debate threads)
DEBATES_FORUM_ID=1234567890123456789

# Status Channel ID (Channel name changes to show bot status)
STATUS_CHANNEL_ID=1234567890123456789

# =============================================================================
# REQUIRED ROLE IDS
# =============================================================================

# Moderator Role ID (for mod-only commands)
MODERATOR_ROLE_ID=1234567890123456789

# =============================================================================
# REQUIRED USER IDS
# =============================================================================

# Developer ID (for footer avatar and dev-only commands)
DEVELOPER_ID=1234567890123456789

# Appeal Reviewer IDs (comma-separated, users who can review ban appeals)
APPEAL_REVIEWER_IDS=1234567890123456789,1234567890123456789

# =============================================================================
# WEBHOOK URLS
# =============================================================================

# Alert Webhook URL (for bot status alerts)
ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Error Webhook URL (for error notifications)
ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Log Webhook URL (for interaction logging)
LOG_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Logging Webhook URL (alias for LOG_WEBHOOK_URL)
LOGGING_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Stats Webhook URL (for daily/weekly stats)
STATS_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Crash Webhook URL (for crash alerts via systemd)
CRASH_WEBHOOK_URL=https://discord.com/api/webhooks/...

# =============================================================================
# FORUM TAGS (JSON format)
# =============================================================================

# News Forum Tags (category name -> tag ID)
NEWS_FORUM_TAGS={"military": 1234567890123456789, "breaking_news": 1234567890123456789, "politics": 1234567890123456789}

# Soccer Team Tags (team name -> tag ID)
SOCCER_TEAM_TAG_IDS={"Barcelona": 1234567890123456789, "Real Madrid": 1234567890123456789}

# Debate Tags (category name -> tag ID)
DEBATE_TAGS={"religion": 1234567890123456789, "politics": 1234567890123456789, "social": 1234567890123456789}

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Toggle Channel IDs (comma-separated, channels to hide/show with /toggle)
TOGGLE_CHANNEL_IDS=1234567890123456789,1234567890123456789
